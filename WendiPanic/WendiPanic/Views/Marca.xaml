<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="#400101"
             Icon="llamada.png"
             x:Class="WendiPanic.Views.Marca">
    <ContentPage.Content>
        <StackLayout Padding="5,0,5,0" VerticalOptions="Center">
            <Image Source="ic_sindica.png" 
                Aspect="AspectFill"
                HeightRequest="150"
                WidthRequest="150"
                HorizontalOptions="Center" />
            <Label
                HorizontalOptions="Center"
                Text="Mensaje"
                TextColor="#DCF8C6"
                x:Name="chaleco"
                />
            <Editor
                Margin="40,10,40,10"
                x:Name="Message"
                Placeholder="Breve mensaje"
                />
            <StackLayout Margin="15,20,10,0">
                <Picker x:Name="Gender" 
                        Title="Seleccionar"
                        HorizontalTextAlignment="Center"
                        BackgroundColor="Transparent"
                        TextColor="#F2B705"
                        WidthRequest="50"
                        >
                </Picker>
            </StackLayout>
            <Button Margin="80,10,80,10" Text="Llamar" TextColor="#730202" BackgroundColor="#F2762E" HeightRequest="50" x:Name="btnCall" Clicked="btnCall_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>